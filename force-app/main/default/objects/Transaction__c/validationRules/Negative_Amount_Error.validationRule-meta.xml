<?xml version="1.0" encoding="UTF-8"?>
<ValidationRule xmlns="http://soap.sforce.com/2006/04/metadata">
    <fullName>Negative_Amount_Error</fullName>
    <active>true</active>
    <description>Non-negative amounts not allowed.</description>
    <errorConditionFormula>Amount__c &lt; 0</errorConditionFormula>
    <errorMessage>Please enter a non-negative amount.</errorMessage>
</ValidationRule>
